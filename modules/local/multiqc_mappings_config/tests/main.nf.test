nextflow_process {

    name "Test process: MULTIQC_MAPPINGS_CONFIG"
    script "../main.nf"
    process "MULTIQC_MAPPINGS_CONFIG"
    tag "modules"
    tag "modules_local"
    tag "multiqc_mappings_config"

    test("Should run without failures") {

        when {
            params {
                outdir = "$outputDir"
            }

            process {
                """
                input[0] = file(params.pipelines_test_data_base + 'modules/local/multiqc_mappings_config/SRX9626017_SRR13191702.mappings.csv', checkIfExists: true)
                """
            }
        }

        then {
            assertAll(
                { assert process.success },
                { assert snapshot(process.out).match() }
            )
        }
    }
}
